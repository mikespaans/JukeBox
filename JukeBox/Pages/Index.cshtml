@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}



<div class="text-center">
    <h1 class="display-4">JukeBox</h1>
    <p>JukeBox home page</p>
    <form>
        <select name="genre">
            <option value="">Select a genre</option>
            @foreach(var genre in ViewData["Genres"] as List<Genres>)
            {
                <option value="@genre.Name">@genre.Name</option>
            }
        
        </select>
        <input type="submit" value="Search"/>

    </form>
    
    <div class="songs">
        @foreach(var songs in ViewData["Songs"] as List<Songs>)
        {
            <div class="song" onclick="location.href='/Privacy'">
                <p1>
                    @songs.Name
                </p1>
                

            </div>
        }
    </div>
</div>